<div class="container p-3 my-3 border">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ title }}</li>
        </ol>
    </nav>
    <h1>{{ title }}</h1>
    <p>{{ description }}</p>


    <form id="mainForm" method="POST">

        <div id="alert" class="alert" role="alert">
            Invalid Submission.
        </div>


        <div class="form-group">
            <label for="InputQuestion">Question</label>
            <input name="InputQuestion" type="text" class="form-control notempty" id="InputQuestion" aria-describedby=""
                placeholder="Enter a challenge question"
                data-empty="This field cannot be empty.  Please enter a question."
                data-invalid="Please enter a valid text format.">
        </div>

        <div class="form-group">
            <label for="InputAnswer1">You don't want the others to answer this</label>
            <input name="InputAnswer1" type="text" class="form-control notempty" id="InputAnswer1" aria-describedby=""
                placeholder="Button that you want the others to press eg. NO" data-empty="This field cannot be empty. "
                data-invalid="Please enter a valid text format.">
            <small id="" class="form-text text-muted">This will be the button that you want someone to press.</small>
        </div>

        <div class="form-group">
            <label for="InputAnswer2">Force the others to answer this</label>
            <input name="InputAnswer2" type="text" class="form-control notempty" id="InputAnswer2" aria-describedby=""
                placeholder="Button that you DONT want the others to press eg. YES"
                data-empty="This field cannot be empty. " data-invalid="Please enter a valid text format.">
            <small id="" class="form-text text-muted">This will be the button that you DONT want someone to
                press.</small>
        </div>


        <div class="form-group">
            <label for="FormControlTextarea1">Comment to appear at the end</label>
            <textarea name="FormControlTextarea1" class="form-control notempty" id="FormControlTextarea1" rows="3"
                data-empty="This comment field cannot be empty" Please enter a valid comment string.></textarea>
        </div>




        <div class="form-group">
            <label for="InputEmail1">Your Email address</label>
            <input name="InputEmail1" type="email" class="form-control notempty" id="InputEmail1"
                aria-describedby="emailHelp" placeholder="Enter email"
                data-empty="This field cannot be empty.  Please enter a valid email."
                data-invalid="Please enter a valid email address.">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>





        <button type="submit" class="btn btn-primary">Submit</button>




    </form>

    <div id="SuccessMessage" class="mt-3 alert alert-success" role="alert">
        <label for="">Successfully created the challenge...</label>
    </div>

    <div id="urlGen" class="mt-3">
        <p for=""><a href=""> HERE </a> </p>
    </div>



















</div>